#include<stdio.h>
#include<locale.h>
#include<math.h>
#include<stdlib.h>
#define N 10

void main()
{
    setlocale(LC_ALL, "RUS");
    float A[N], temp, a, b = 0;
    for (int i = 0; i < 10; i++)
    {
        printf("a[%d] = ", i + 1);
        scanf_s("%f", &temp);
        A[i] = temp;
    }
    puts("-----------------------------------------------");
    puts("| индекс | исходное значeние | новое значение");
    puts("-----------------------------------------------");
    for (int i = 0; i < 10; i++)
    {
        a = pow(A[i], 2);
        printf("\n |a[%3d]|%17.0f|%17.0f|\n", i + 1, A[i], a);
        b += A[i];
        puts("-------------------------------------------");
    }
    printf("среднее арифметическое элементов массива %.3f\n", b / N);
}
